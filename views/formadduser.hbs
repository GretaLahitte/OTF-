{{#content "page"}}
	<!-- Page Content -->
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="col-xs-12 col-sm-12">
                <h3>AddUser</h3>
            </div>
        </div>
        <form class="form-horizontal" role="form" method="POST" accept-charset="utf-8" action="/adduser">
            <div class="row-fluid">
